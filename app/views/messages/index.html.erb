<h1 style="display:inline">掲示板</h1> ver.0.0.4

<%= form_for(@message) do |f| %>
	<% if @message.errors.any? %>
		<% @message.errors.full_messages.each do |err| %>
			<font color='red'><%= err %></font><br>
		<% end %>
	<% end %>
	<br>
	<div>TITLE:<%= f.text_field :title %></div>
	<br>
	<div>BODY :<%= f.text_area :body %></div>
	<br>
	<%= f.submit %><br>
<% end %>
<hr>

<% @messages.each do |msg| %>

	<%= msg.id %> :<%= msg.title %> : 
	<br>
	<pre><%= msg.body %></pre>
	<br>


<% end %>
